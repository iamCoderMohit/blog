{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",

    "module": "NodeNext",
    "target": "ES2023",
    "moduleResolution": "NodeNext",

    "esModuleInterop": true,
    "allowJs": true,
    "noEmitOnError": false,

    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    "strict": true,
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "skipLibCheck": true
  },
  "include": [
    "./src/**/*.ts",
    "./dist/generated/prisma/**/*.d.ts"
  ],
  "exclude": ["prisma.config.ts"]
}
